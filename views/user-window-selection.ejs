<%- include('partials/headerMain') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Vilniaus kolegijos metinių veiklos ataskaitų sistema</h1>
</div>

<div class="container">
  <div class="jumbotron ">
    <% if(userInfLogin != '') { %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <div>Prisijungimas sėkmingas!</div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    <% if(userInfReg != '') { %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <div>Registracija sėkminga!</div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    <h4 class="text-center">Pasirinkite naudotojo aplinką</h4>
    <form id="form-id" action="/update-user-window-selection-role" method="post">
      
      <div class="form-row">
        <div class="col-md-3 mb-3">
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12">
          <select name="role" class="form-select">
            <option class="others" <%if (user.rolesKeitimas === false && user.role === "katedros vedėjas") { %> disabled <% } %> value="dėstytojas">Dėstytojų ataskaitos</option>
            <option class="others" <%if (user.rolesKeitimas === false && user.role === "dėstytojas") { %> disabled <% } %>value="katedros vedėjas">Katedros vedėjų ataskaitos</option>
          </select>
        </div>
      </div>
      <br>
      
    </form>
    <div class="row">
      <div class="col-lg-3">
      </div>
      <div class="col-lg-6 col-md-12 col-sm-12 text-center">
        <button type="" class="btn btn-primary" id="patvirtintiId">PATVIRTINTI</button>
      </div>
    </div>
    
  </div>
</div>


<%- include('partials/footer') %>