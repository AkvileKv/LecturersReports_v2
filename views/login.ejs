<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron ">
    <% if(userFailure != '') { %>
      <div class="alert alert-danger alert-dismissible" role="alert">
        <div>Prisijungimas nesėkmingas! Netinkamas naudotojo vardas arba slaptažodis</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>

    <form action="/login" method="post">
      <div class="form-group">
        <p class="text-center">PRISIJUNGIMAS</p>

        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label>El. pašto adresas:</label>
            <input type="email" name="username" class="form-control form-control-md" autofocus required placeholder="" autocomplete="on">
          </div>
        </div>

        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label>Slaptažodis:</label>
            <input type="password" name="password" class="form-control form-control-md" required placeholder="" autocomplete="off">
          </div>
        </div>

        <br>
        <div class=" text-center">
          <button type="submit" class="btn btn-primary ">Prisijungti</button>
        </div>
      </div>
    </form>
  </div>
</div>



<%- include('partials/footer') %>
