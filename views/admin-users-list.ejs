<%- include('partials/headerAdmin') %>

<div class="container">
  <div class="jumbotron ">

    <h1 class="text-center">Visų duomenų bazėje esančių naudotojų sąrašas</h1>
    <br>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Fakultetas</th>
          <th scope="col">Katedra</th>
          <th scope="col">Rolė</th>
          <th scope="col">Naudotojas</th>
          <th scope="col"></th>
        </tr>
      </thead>

      <%  users.forEach(function(user){ %>
      <div class="database-result-edit ">
        <tbody>
          <tr>
            <td><%=user.fakultetas%></td>
            <td><%=user.katedra%></td>
            <td>
              <%if (user.rolesKeitimas == true){ %>
              katedros vedėjas / dėstytojas
              <%  } else { %>
              <%=user.role%>
              <%  } %>
            </td>
            <td scope="row">
              <div class="edit-left">
                <span class="font-weight-bold"> <%=user.vardas + " " + user.pavarde%></span>
              </div>
            </td>
            <td>
              <div class="text-right">
                <div class="btn-group" role="group" aria-label="" id="group">
                  <a type="button" class="btn btn-primary" href="/admin-edit-user/<%= user._id %>"> Redaguoti</a>
                  <a type="button" class="btn btn-secondary" href="/admin-all-user-reports/<%= user._id %>"> Ataskaitos</a>
                  <form action="/delete" method="post">
                    <button class="btn btn-danger" type="submit" name="deleteById" onclick="return confirm('Ar tikrai norite ištrinti naudotoją?');" value="<%=user._id%>">Ištrinti</button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </div>
      <% }) %>

    </table>

    <% if (pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
            <li class="disabled"><a>First</a></li>
        <% } else { %>
            <li><a href="/admin-history-log/1">First</a></li>
        <% } %>
        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
            <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
                <li class="active"><a><%= i %></a></li>
            <% } else { %>
                <li><a href="/admin-history-log/<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
        <% } %>
        <% if (current == pages) { %>
            <li class="disabled"><a>Last</a></li>
        <% } else { %>
            <li><a href="/admin-history-log/<%= pages %>">Last</a></li>
        <% } %>
    </ul>
<% } %>


  </div>
</div>



<%- include('partials/footer') %>
