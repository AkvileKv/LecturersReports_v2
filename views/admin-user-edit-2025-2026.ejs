<%- include('partials/headerAdmin2025_2026') %>

<div class="container">
  <div class="jumbotron ">
    
    <h1 class="text-center">Naudotojo <%=user.vardas%> <%=user.pavarde%> redagavimas 2025 - 2026 m. m.</h1>
    <br>
    <form action="/update-user-info-admin-2025-2026" method="post">
      
      <div class="form-group ">
        <!-- <h4 class="text-center">Jūsų duomenys</h4> -->
        <input type="hidden" class="form-control" name="id" value="<%=user._id%>">
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">El. paštas:</label>
            <input type="text" class="form-control" name="elpastas" value="<%=user.username%>" readonly required>
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Fakultetas:</label>
            <input type="text" class="form-control" name="fakultetas" value="<%=user.fakultetas%>" readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Katedra:</label>
            <input type="text" class="form-control" name="katedra" value="<%=user.katedra%>" readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Rolė 2025 - 2026 m. m.:</label>
            <input type="text" class="form-control" name="role" readonly <%if (user.teachingYear25_26 === true && user.headOfTheDepartment25_26 === false) { %> value="Dėstytojas" <% } else if (user.teachingYear25_26 === false && user.headOfTheDepartment25_26 === true){ %> value="Katedros vedėjas" <% } else if (user.teachingYear25_26 === true && user.headOfTheDepartment25_26 === true){ %> value="Dėstytojas ir Katedros vedėjas" <% } %>>
          </div>
        </div>
        <%if (user.teachingYear25_26 === true) { %>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Dėstytojo ataskaitos būsena 2025 - 2026 m. m.:</label>
            <select name="busena" class="form-select form-control" required>
              <option class="others" <%if (user.busena25_26 === "nesukurta") { %> selected <% } %> value="nesukurta">Nesukurta</option>
              <option class="others" <%if (user.busena25_26 === "redaguojama") { %> selected <% } %> value="redaguojama">Redaguojama</option>
              <option class="others" <%if (user.busena25_26 === "užrakinta") { %> selected <% } %> value="užrakinta">Užrakinta</option>
              <option class="others" <%if (user.busena25_26 === "užrakintaVedėjo") { %> selected <% } %> value="užrakintaVedėjo">Užrakinta katedros vedėjo</option>
            </select>
          </div>
        </div>
        <% } %>
        <%if (user.headOfTheDepartment25_26 === true) { %>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Vedėjo ataskaitos būsena 2025 - 2026 m. m.:</label>
            <select name="busenaVedejo" class="form-select form-control" required>
              <option class="others" <%if (user.busenaVedejo25_26 === "nesukurta") { %> selected <% } %> value="nesukurta">Nesukurta</option>
              <option class="others" <%if (user.busenaVedejo25_26 === "redaguojama") { %> selected <% } %> value="redaguojama">Redaguojama</option>
              <option class="others" <%if (user.busenaVedejo25_26 === "užrakinta") { %> selected <% } %> value="užrakinta">Užrakinta</option>
            </select>
          </div>
        </div>
        <% } %>
        
        <br>
        <div class="row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12 text-center">
            <button type="submit" class="btn btn-primary " onclick="return confirm('Ar tikrai norite išsaugoti pakeitimus?');">ATNAUJINTI</button>
          </div>
        </div>
        
      </div>
      
      
    </form>
    
  </div>
</div>

<%- include('partials/footer') %>