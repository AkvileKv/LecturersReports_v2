<%- include('partials/headerAdmin') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Naudotojo <%=user.username%> aplinka</h1>
  <p class="lead">Jūsų rolė: <%=user.role%></p>
</div>

<div class="container">
  <div class="jumbotron ">
    <% if(userNamee != '') { %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <div>Prisijungimas sėkmingas!</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>
      <% if(userUpdateProfile != '') { %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <div>Sėmingai atnaujinta!</div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>
    <form action="/update-profile-admin" method="post">

      <div class="form-group">
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">El. paštas:</label>
            <input type="text" class="form-control " name="username" value="<%=user.username%>" placeholder="" readonly>
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Vardas:</label>
            <input type="text" class="form-control " name="vardas" value="<%=user.vardas%>" placeholder="" required>
          </div>
        </div>
        <div class="form-row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12">
            <label for="">Pavardė:</label>
            <input type="text" class="form-control " name="pavarde" value="<%=user.pavarde%>" placeholder="" required>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-3">
          </div>
          <div class="col-lg-6 col-md-12 col-sm-12 text-center">
            <button type="submit" class="btn btn-primary ">ATNAUJINTI</button>
          </div>
        </div>

      </div>

    </form>
  </div>
</div>


<%- include('partials/footer') %>
